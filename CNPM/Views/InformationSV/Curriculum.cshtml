@model IEnumerable<CNPM.Models.MONHOC>

@{
    ViewBag.Title = "Curriculum";
    Layout = "~/Views/Shared/LayoutSV.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Chương trình đào tạo</strong>
                    </div>
                </div>
                <p>Khoa: <strong>@Session["MaKhoa"]</strong></p>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th>
                                Tên môn học
                            </th>
                            <th>
                                Số tín chỉ
                            </th>
                            <th>
                                Tên khoa
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenMH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoTinChi)
                                </td>
                                <td>
                                    <a href="/admin/monhocs/details/@item.MaMH" class="btn btn-sm btn-info">Chi tiết</a>
                                    <a href="/admin/monhocs/edit/@item.MaMH" class="btn btn-sm btn-primary">Sửa</a>
                                    <a href="/admin/monhocs/delete/@item.MaMH" class="btn btn-sm btn-danger">Xóa</a>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
                <!-- /.card-body -->
            </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
