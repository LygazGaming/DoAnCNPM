@model CNPM.Models.SINHVIEN
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/MasterLayoutLogin.cshtml";
}
<body style="background-color:ghostwhite;">
    <div id="frame">
        <div class="login">
            <a href=""><img src="https://i.imgur.com/B7tN0Pn.png" alt="Logo" style="margin-top: 3vh;" height="160px" width="250px"></a>
            <h1>LOGIN</h1>
            @using (Html.BeginForm("Login", "Account"))
            {
                <section action="/LoginController/Login()" method="post">
                    <input type="text" name="EMAIL" placeholder="Email">
                    <br>
                    <input type="password" name="PASSWORD" placeholder="Password">
                    <br />
                    <input type="submit" name="Login" value="Đăng nhập" />
                    <br><br>
                    <a href="@Url.Action("FindEmail", "ForgetPass")">Quên mật khẩu?</a>
                </section>
            }
        </div>
    </div>
</body>
