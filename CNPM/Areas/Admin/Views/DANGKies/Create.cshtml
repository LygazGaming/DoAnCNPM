@model CNPM.Models.DANGKY

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content my-2">
            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Nhập điểm</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            @Html.ActionLink("Quay về", "Index", null, new { @class = "btn btn-info" })
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <div class="control-label col-md-2">
                            Họ và tên
                        </div>
                        <div class="col-md-10">
                            @Html.DropDownList("MaSV", (SelectList)ViewBag.MaSV, null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaSV, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-2">
                            Lớp học phần
                        </div>
                        <div class="col-md-10">
                            @Html.DropDownList("MaLHP", (SelectList)ViewBag.MaLHP, null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaLHP, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-2">
                            Điểm chuyên cần
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DiemChuyenCan, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DiemChuyenCan, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-2">
                            Điểm giữa kì
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DiemGiuaKy, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DiemGiuaKy, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="control-label col-md-2">
                            Điểm cuối kì
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DiemCuoiKy, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DiemCuoiKy, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Tạo" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
}
