@model CNPM.Models.GIANGVIEN

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Chi tiết giảng viên</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        @Html.ActionLink("Quay về", "Index", null, new { @class = "btn btn-info" })
                        @Html.ActionLink("Sửa", "Edit", new { id = Model.MaGV }, new { @class = "btn btn-primary" })
                    </div>
                </div>

            </div>
            <div class="card-body">
                <dl class="dl-horizontal">
                    <dt>
                        Họ và tên
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.HoTen)
                    </dd>

                    <dt>
                        Giới tính
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GioiTinhHienThi)
                    </dd>

                    <dt>
                        Số điện thoại
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SoDienThoai)
                    </dd>

                    <dt>
                        Email
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt>
                        Chức vụ
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ChucVu)
                    </dd>

                    <dt>
                        Mật khẩu
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MatKhau)
                    </dd>

                    <dt>
                        Ngày sinh
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NgaySinh)
                    </dd>

                    <dt>
                        Ngày vào làm
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NgayVaoLam)
                    </dd>

                    <dt>
                        Địa chỉ
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.DiaChi)
                    </dd>

                    <dt>
                        Tên Khoa
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.KHOA.TenKhoa)
                    </dd>

                </dl>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
