@model IEnumerable<CNPM.Models.KHOA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong>
                            Danh sách khoa
                        </strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="/admin/khoas/create" class="btn btn-success">Thêm mới</a>
                    </div>
                </div>

            </div>
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>
                            Tên khoa
                        </th>
                        <th>Chức năng</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenKhoa)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.MaKhoa }) |
                                @Html.ActionLink("Details", "Details", new { id = item.MaKhoa }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.MaKhoa })
                            </td>
                        </tr>
                    }

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
