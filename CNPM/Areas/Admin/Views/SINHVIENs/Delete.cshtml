                    </div>

                </div>
                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            Họ và tên
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HoTen)
                        </dd>

                        <dt>
                            Giới tính
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.GioiTinhHienThi)
                        </dd>

                        <dt>
