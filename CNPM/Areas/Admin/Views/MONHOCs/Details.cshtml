@model CNPM.Models.MONHOC

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Chi tiết môn học</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        @Html.ActionLink("Quay về", "Index", null, new { @class = "btn btn-info" })
                        @Html.ActionLink("Sửa", "Edit", new { id = Model.MaMH }, new { @class = "btn btn-primary" })
                    </div>

                </div>

            </div>
            <div class="card-body">
                <dl class="dl-horizontal">
                    <dt>
                        Tên môn học
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TenMH)
                    </dd>

                    <dt>
                        Số tín chỉ
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SoTinChi)
                    </dd>

                    <dt>
                        Tên khoa
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.KHOA.TenKhoa)
                    </dd>

                </dl>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
